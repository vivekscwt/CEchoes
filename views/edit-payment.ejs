    function updateExpireDate() {
        const startDateInput = document.getElementsByName("start_date")[0];
        const expireDateInput = document.getElementsByName("expire_date")[0];
        const subscriptionMode = document.querySelector('input[name="subscription_mode"]:checked').value;
        
        const startDate = new Date(startDateInput.value);
        let expireDate;

        if (subscriptionMode === "Monthly") {
            // Calculate the next month's date
            expireDate = new Date(startDate.getFullYear(), startDate.getMonth() + 1, startDate.getDate());
        } else if (subscriptionMode === "Yearly") {
            // Calculate the next year's date
            expireDate = new Date(startDate.getFullYear() + 1, startDate.getMonth(), startDate.getDate());
        }

        // Format the expireDate to yyyy-mm-dd
        const year = expireDate.getFullYear();
        const month = String(expireDate.getMonth() + 1).padStart(2, '0');
        const day = String(expireDate.getDate()).padStart(2, '0');
        const formattedExpireDate = `${year}-${month}-${day}`;

        expireDateInput.value = formattedExpireDate;
    }
    document.getElementsByName("start_date")[0].addEventListener("change", updateExpireDate);
