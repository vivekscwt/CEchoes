                                            </label>
                                            <!--end::Option-->
                                            <!--begin::Option-->
                                            <label class="form-check form-check-inline form-check-solid me-5">
                                                <input class="form-check-input mt-1" name="subscription_mode" type="radio" value="Yearly" onchange="updateExpireDate()" <% if(paymentDetails.subscription_mode == "Yearly")  { %> checked <% } %> />
                                                <span class="fw-bold fs-6 badge badge-light-success fw-bolder px-4 py-3">Yearly</span>
                                            </label>
                                        </div>
                                        <!--end::Options-->
                                    </div>
                                </div>
                                <%

                                    const date = new Date(paymentDetails.start_date);
                                    const year = date.getFullYear();
                                    const month = String(date.getMonth() + 1).padStart(2, '0');
                                    const day = String(date.getDate()).padStart(2, '0');
                                    const formattedDate = `${year}-${month}-${day}`;

                                    // Calculate the next month's date
                                    const nextMonthDate = new Date(paymentDetails.expire_date);

                                    const nextMonthYear = nextMonthDate.getFullYear();
                                    const nextMonthMonth = String(nextMonthDate.getMonth() + 1).padStart(2, '0');
                                    const nextMonthDay = String(nextMonthDate.getDate()).padStart(2, '0');
                                    const formattedNextMonthDate = `${nextMonthYear}-${nextMonthMonth}-${nextMonthDay}`;
                                %>

                                <div class="row mb-6">
                                    <!--begin::Label-->
                                    <label class="col-lg-4 col-form-label fw-bold fs-6">
                                        <span class="">Start Date</span>
                                    </label>
                                    
                                    <div class="col-lg-8 fv-row">
                                        <input type="date" name="start_date" class="form-control form-control-lg form-control-solid" placeholder="Main Address" value="<%= formattedDate %>" />
                                    </div>
                                    <!--end::Col-->
                                </div>
                                <div class="row mb-6">
                                    <!--begin::Label-->
                                    <label class="col-lg-4 col-form-label fw-bold fs-6">
                                        <span class="">Expire Date</span>
                                    </label>
                                    <!--end::Label-->
                                    <!--begin::Col-->
                                    <div class="col-lg-8 fv-row">
                                        <input type="date" name="expire_date" class="form-control form-control-lg form-control-solid" placeholder="Main Address" value="<%= formattedNextMonthDate %>" readonly />
                                    </div>
                                    <!--end::Col-->
                                </div>

                            </div>
                            <!--end::Card body-->
                            <!--begin::Actions-->
                            <input type="hidden" name="payment_id" value="<%= paymentDetails.id %>" />
                            
                            <% if(currentUserData.user_type_id != 3 ) { %>
                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <button type="reset"
                                    class="btn btn-light btn-active-light-primary me-2">Discard</button>
                                <button type="submit" class="btn btn-primary"
                                    id="kt_account_profile_details_submit">Save Changes</button>
                            </div>
                            <% } %>
                            <!--end::Actions-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Basic info-->

                <!--end::Modals-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::Post-->
    </div>
    <!--end::Content-->
