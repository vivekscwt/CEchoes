                            <label class="col-lg-4 col-form-label fw-bold fs-6">
                                <span class="required">Upload Image</span>
                            </label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8">
                                <!--begin::Image input-->
                                <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url(/assets/media/avatars/blank.png)">
                                    <!--begin::Preview existing avatar-->
                                    <% if(reviewRatingData && reviewRatingData.rating_image){ %>
                                    <div class="image-input-wrapper w-125px h-125px" style="background-image: url('/<%= reviewRatingData.rating_image %>')" ></div>
                                    <% }else{ %>
                                    <div class="image-input-wrapper w-125px h-125px" style="background-image: url('/assets/media/avatars/blank.png')" ></div>
                                    <% } %>
                                    <!--end::Preview existing avatar-->
                                    <!--begin::Label-->
                                    <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change avatar">
                                        <i class="bi bi-pencil-fill fs-7"></i>
                                        <!--begin::Inputs-->
                                        <input type="file" name="rating_image" accept=".png, .jpg, .jpeg, .gif" />
                                        <input type="hidden" name="avatar_remove" />
                                        <input type="hidden" name="previous_rating_image" value="<%= reviewRatingData.rating_image %>">
                                        <!--end::Inputs-->
                                    </label>
                                    <!--end::Label-->
                                    <!--begin::Cancel-->
                                    <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="Cancel avatar">
                                        <i class="bi bi-x fs-2"></i>
                                    </span>
                                    <!--end::Cancel-->
                                    <!--begin::Remove-->
                                    <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="Remove avatar">
                                        <i class="bi bi-x fs-2"></i>
                                    </span>
                                    <!--end::Remove-->
                                </div>
                                <!--end::Image input-->
                                <!--begin::Hint-->
                                <div class="form-text">Allowed file types: gif, png, jpg, jpeg.</div>
                                <!--end::Hint-->
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-6">
                            <!--begin::Label-->
                            <label class="col-lg-4 col-form-label fw-bold fs-6">
                                <span class="required">Tags</span>
                            </label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <% const tag_items = reviewRatingData.rating_tags.split('|'); %>
                                <input class="form-control" name="rating_tags" value="<% tag_items.forEach(function(tag) { %><%= tag %>, <% }); %>" id="kt_rating_tags"/>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->



                    </div>
                    <!--end::Card body-->
                    <!--begin::Actions-->
                    <div class="card-footer d-flex justify-content-end py-6 px-9">
                        <button type="reset" class="btn btn-light btn-active-light-primary me-2">Discard</button>
                            <input type="hidden" name="row_id" value="<%= reviewRatingData.id %>">
                        <button type="submit" class="btn btn-primary" id="kt_review_tag_update_form_submit">Submit</button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Basic info-->
    </div>
    <!--end::Container-->
    </div>
    <!--end::Post-->
</div>
<!--end::Content-->
