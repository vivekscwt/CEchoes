        display: inline-block;
        width: 65px;
        height: 35px;
    }

    .tab_pricelist .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .tab_pricelist .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #FCCB06;
        transition: .4s;
        border-radius: 34px;
    }

    .tab_pricelist .slider:before {
        position: absolute;
        content: "";
        height: 30px;
        width: 30px;
        left: 4px;
        bottom: 2px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
    }

    .tab_pricelist input:checked+.slider {
        background-color: #FCCB06;
    }

    .tab_pricelist input:checked+.slider:before {
        transform: translateX(26px);
    }

    .tab_pricelist input:checked~#monthly-label {
        color: #000;
    }

    .tab_pricelist input:checked~#yearly-label {
