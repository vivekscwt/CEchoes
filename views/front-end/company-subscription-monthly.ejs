            const email = document.getElementById('email').value.trim();
            if (!email) return false;

            const password = document.getElementById('register_password').value;
            const confirmPassword = document.getElementById('register_confirm_password').value;
            if (password.length < 8 || password.length > 30 || password !== confirmPassword) {
                document.getElementById('passwordMismatchError').style.display = 'block';
                return false;
            } else {
                document.getElementById('passwordMismatchError').style.display = 'none';
            }
            return true;
        } else if (step === 2) {
            return document.getElementById('company_name').value.trim() &&
                   document.getElementById('main_address').value.trim() &&
                   document.getElementById('comp_email').value.trim() &&
                   document.getElementById('comp_phone').value.trim() &&
                   document.getElementById('main_address_country').value &&
                   document.getElementById('main_address_pin_code').value.trim();
        }
        return true;
