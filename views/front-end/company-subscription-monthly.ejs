                            $('#companyemailAvailabilityError').hide();
                            validateForm1(); // Re-validate form after email check
                        }
                    },
                    error: function(error) {
                        console.error('Error checking email availability:', error);
                    }
                });
            }
        } else {
            $('#companyemailAvailabilityError').hide();
