                });

                const backButton = document.querySelector('.formbold-back-btn');
                backButton.style.display = step === 1 ? 'none' : 'block';

                const nextButton = document.getElementById('nextStepBtn');
                nextButton.style.display = step === 3 ? 'none' : 'block';
            }

