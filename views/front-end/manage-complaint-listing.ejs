               $('.assign-user-link').on('click', function() {
    var categoryId = $(this).data('category-id');
    var complaintId = $(this).data('complaint-id');
    var levelId = $(this).data('level-id');
    var customerId = $(this).data('customer-id');

    console.log("categoryId, complaintId, levelId, customerId, categoryId", categoryId, complaintId, levelId, customerId, categoryId);

    $('#complaintIdField').val(complaintId);
    $('#levelIdField').val(levelId);
    $('#customerIdField').val(customerId);
    $('#categoryId').val(categoryId);

    $.ajax({
        url: `/getusers/${categoryId}`,  // Adjusted to match your server route
        type: 'GET',
        success: function(response) {
         console.log("response",response);
         console.log("aaaaaa")
            if (response.status == 'ok' && response.users) {
                var $select = $('#category').empty(); // Clear previous options
                response.users.forEach(function(user) {
                    $select.append($('<option></option>').val(user.emails).text(user.emails + ' (Level- ' + user.level + ')'));
                });
            } else {
                console.log('No users found or error:', response.message);
                $('#category').empty().append('<option>No users found</option>');
            }
        },
        error: function(error) {
            console.error('Failed to fetch users', error);
            $('#category').empty().append('<option>Error fetching users</option>');
        }
    });
});


               $('form.message_form').submit(function (e) {
                  e.preventDefault();
                  $('.response-message').hide();
                  $('.response-message').text('');
                  $('#query_submit_btn').prop('disabled', true);
                  $('.frm-loading').show();
                  //alert('aaaaaa')
                  const transformedResponse = {};
                  const formData = $(this).serializeArray();
                  $(formData).each(function (index, field) {
                     transformedResponse[field.name] = field.value;
                  });
                  console.log(transformedResponse);
                  //return false;
                  $.ajax({
                     url: '/auth/company-query', // URL for your API endpoint
                     method: 'POST',
                     data: JSON.stringify(transformedResponse),
                     //data: formData,
                     processData: false,
                     //contentType: false,
                     contentType: 'application/json',
                     success: function (data) {
                        if (data.status == 'ok') {
                           $('.response-message').text(data.message);
                           $('.response-message').show();
                           $('#query_submit_btn').prop('disabled', false);
                           $('.frm-loading').hide();
                           setTimeout(function () {
                              window.location.reload();
                           }, 2000);
                        } else {
                           $('.response-message').text(data.message);
                           $('.response-message').show();
                           $('#query_submit_btn').prop('disabled', false);
                           $('.frm-loading').hide();
                           console.log('Something went wrong');
                        }
                     },
                     error: function (xhr, status, error) {
                        // Handle any errors that occur during the request
                        console.log(error);
                     }
                  });

               });

               $('.btn_close_all').on('click', function (e) {
                  location.reload(true);
               })

               $('.escalate_next_level').on('click', function (e) {
                  const complaintId = $(this).data('complaint-id');
                  const customerId = $(this).data('customer-id');
                  const levelId = $(this).data('level-id');
                  //console.log(complaintId, customerId, levelId)
                  //alert('aaaaaaaa');
                  $.ajax({
                     url: '/auth/escalate-next-level',
                     method: 'POST',
                     data: JSON.stringify({ complaintId: complaintId, customerId: customerId, levelId: levelId }),
                     contentType: 'application/json',
                     processData: false,
                     success: function (data) {
                        // $('.response-message').text(data.message);
                        // $('.response-message').show();

                        // Display success message in the modal
                        $('#successMessage').text(data.message);
                        // Open the modal
                        $('#successModal').modal('show');
                        setTimeout(function () {
                           location.reload(true);
                        }, 3000);
                     },
                     error: function (error) {
                        console.log(error);
                     }
                  })
                  //return false;
               });

               $('#leveluserForm').on('submit', function (event) {
                  event.preventDefault(); 


                  var formData = $(this).serialize();
                  console.log("formDatass", formData);
                  $.ajax({
                     url: '/auth/assign-users',
                     method: 'POST',
                     data: formData,
                     success: function (response) {
                        console.log('Forms submitted successfully!');
                        alertMessage('success', response.success_message);
