                        }
                        alertMessage('error', errorMessage);
                     }
                  });
               });
               
               $('#assignuserForm').on('submit', function (event) {
                  event.preventDefault(); 

                  var formData = $(this).serialize();
                  console.log("formDatass", formData);
                  $.ajax({
                     url: '/auth/escalate-assign-users',
                     method: 'POST',
                     data: formData,
                     success: function (response) {
                        console.log('Forms submitted successfully!');
                        alertMessage('success', response.success_message);
                     },
                     error: function (xhr, status, error) {
                        console.error('Error submitting form:', error);

                        var errorMessage;
                        if (xhr.responseJSON && xhr.responseJSON.error_message) {
