                           errorMessage = 'An error occurred while submitting emails. Please try again later.';
                        }
                        alertMessage('error', errorMessage);
                     }
                  });
               });
               
               $('#updatecategoryForm').on('submit', function (event) {
                  event.preventDefault(); 

